{
  "name": "linetalk",
  "version": "1.0.0",
  "description": "linetalk is a lightweight terminal chat system built on raw TCP sockets.",
  "author": "Camilo Barbosa",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "build:watch": "tsc -w",
    "start-server": "node ./dist/server/index.js",
    "start-server:dev": "nodemon ./dist/server/index.js",
    "start-client": "node ./dist/client/index.js",
    "start-client:dev": "nodemon ./dist/client/index.js"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "nodemon": "^3.1.11",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
